<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    {% block starthead %}{% endblock starthead %}
    <meta charset="{{ resource.meta.charset }}">

    <!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame
         Remove this if you use the .htaccess -->
    <meta http-equiv="X-UA-Compatible" content="{{ resource.meta.compatibility }}">

    <!-- encoding must be specified within the first 512 bytes
          www.whatwg.org/specs/web-apps/current-work/multipage/semantics.html#charset -->

    <!-- meta element for compatibility mode needs to be before
          all elements except title & meta
          msdn.microsoft.com/en-us/library/cc288325(VS.85).aspx -->
    <!-- Chrome Frame is only invoked if meta element for
          compatibility mode is within the first 1K bytes
          code.google.com/p/chromium/issues/detail?id=23003 -->

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{ resource.meta.description }}">
    <meta name="author" content="{{ resource.meta.author }}">

    {% block favicons %}
    <!-- Place favicon.ico & apple-touch-icon.png
          in the root of your domain and delete these references -->
    <link rel="shortcut icon" href="{{ media_url('/favicon.ico') }}">
    <link rel="apple-touch-icon" href="{{ media_url('/apple-touch-icon.png') }}">
    {% endblock favicons %}
    <!--link rel="shortcut icon" href="../../docs-assets/ico/favicon.png"-->

    <title>{% block title %}{{ resource.meta.title }}{% endblock %}</title>


    <!-- Bootstrap core CSS -->
    <!--link href="assets/css/bootstrap.css" rel="stylesheet"-->
	{% block css %}
	<link href="{{ media_url('css/bootstrap.css') }}" rel="stylesheet">
	<link href="{{ media_url('css/main.css') }}" rel="stylesheet">
	{% endblock css %}

    <!-- Custom styles for this template -->
    <!--link href="assets/css/main.css" rel="stylesheet"-->
  {% block headjs %}
  <!-- All JavaScript at the bottom, except for Modernizr which
        enables HTML5 elements & feature detects -->
    <script src="{{ media_url('js/hover.zoom.js') }}"></script>
    <script src="{{ media_url('js/hover.zoom.conf.js') }}"></script>
    <script src="{{ media_url('js/libs/modernizr-1.7.min.js') }}"></script>
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
  {% endblock headjs %}
  {% block endhead %}{% endblock endhead %}


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body id="{{ resource.meta.id if resource.meta.id else resource.slug }}">

    <!-- Static navbar -->
    <div class="navbar navbar-inverse navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="{{content_url('index.html')}}">Zi Yan</a>
        </div>
        <div class="navbar-collapse collapse">
	          {% block nav %}
	          {% from "macros.j2" import render_nav with context %}
	          {{ render_nav(menu, 'main_nav') }}
	          {% endblock nav %}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

	<div id = "main_body">
		<div class = "container">
			{% block main%}
			{% endblock main%}
		</div> <!-- /container -->
	</div> <!-- /main_body -->

	<!-- +++++ Footer Section +++++ -->
	{% block footer %}
	<div id="footer">
		<div class="container">
			<div class="row">

				<div class="col-lg-4">
					<h4>My Links</h4>
					<p>
						<a href="https://twitter.com/Birdman_yan" target="_blank">Twitter</a><br/>
						<a href="https://www.facebook.com/yeats.yan" target="_blank">Facebook</a>
					</p>
				</div><!-- /col-lg-4 -->

				<div class="col-lg-4">
					<h4>About Here</h4>
					<p>CSS from <a href="http://alvarez.is/">Carlos Alvarez</a>, and site generated by <a href="https://github.com/hyde/hyde">hyde</a></p>
				</div><!-- /col-lg-4 -->

			</div>

		</div>
	</div>
	{% endblock footer %}

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
	{% block js %}
    {% block analytics %}
    {% include "analytics.j2" %}
    {% endblock analytics %}
	<script src="{{media_url('js/bootstrap.min.js')}}"></script>
    {% endblock js %}
  </body>
</html>
